{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
  },
  "tstl": {
    "luaLibImport": "inline"
  },
  "include": [
    "./**/*.ts"
  ]
}