{
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "./",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "shared/*": ["../shared/*"]
    },
    "target": "ES6",
    "moduleResolution": "node",
    "typeRoots": [
      "global.d.ts"
    ],
    "types": [
      "@typescript-to-lua/language-extensions",
      "lua-types/5.1",
      "cc-tweaked-types"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": false,
    "removeComments": false
  },
  "tstl": {
    "luaTarget": "5.1",
    "luaBundle": "../../lua/dist.lua",
    "luaBundleEntry": "./src/turtle/runtime.ts",
    "noHeader": true,
    "luaLibImport": "inline"
  },
  "include": [
    "./**/*.ts",
    "./**/*.lua",
    "../shared/**/*.ts",
    "../shared/**/*.lua"
  ]
}
