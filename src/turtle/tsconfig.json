{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "lib": [
      "ESNext"
    ],
    "types": [
      "typescript-to-lua/language-extensions",
      "lua-types/5.1",
      "cc-tweaked-types"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": false
  },
  "tstl": {
    "luaTarget": "5.1",
    "luaBundle": "../../lua/dist.lua",
    "luaBundleEntry": "./src/turtle/index.ts",
    "noHeader": true,
    "luaLibImport": "inline"
  },
  "references": [
      { "path": "../shared/tsconfig.client.json" }
  ],
  "include": [
    "./**/*.ts",
    "./**/*.lua"
  ],
}