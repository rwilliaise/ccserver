{
  "compilerOptions": {

    "rootDir": "./src/server",
    "outDir": "./dist",

    "target": "esnext",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
