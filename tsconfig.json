{
  "compilerOptions": {

    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
